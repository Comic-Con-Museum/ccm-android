<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:id="@+id/background">
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item
            android:left="26dp"
            android:right="26dp">
        <shape android:id="@+id/vert"
                android:shape="line">
            <stroke android:color="@color/gray"
                    android:width="26dp"/>
        </shape>
    </item>
    <item
            android:left="26dp"
            android:right="26dp">
        <rotate
                android:fromDegrees="90"
                android:pivotX="50%"
                android:pivotY="50%"
                android:toDegrees="-90">
            <shape android:id="@+id/horizontal"
                   android:shape="line">
                <stroke android:color="@color/gray"
                       android:width="26dp"/>
            </shape>
        </rotate>
    </item>
</layer-list>