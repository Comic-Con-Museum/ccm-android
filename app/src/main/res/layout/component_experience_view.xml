<?xml version="1.0" encoding="utf-8"?>
<com.comic_con.museum.ar.views.ExperienceView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/experience_view_background"
        android:elevation="6dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

        <TextView
                android:id="@+id/experience_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textSize="24sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/dark_text"
                tools:text="Eisners"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"/>

        <TextView
                android:id="@+id/experience_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:lineSpacingExtra="6sp"
                tools:text="The eisners are an award collection representing the best of the graphic novel industry. Including popular titles such as Monstress, Starman, and The Watchmen."/>

    </LinearLayout>


    <com.comic_con.museum.ar.views.BottomRoundedImageView
            android:id="@+id/experience_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_weight="1"
            tools:src="@color/light_blue"/>

</com.comic_con.museum.ar.views.ExperienceView>